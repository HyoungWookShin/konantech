.select-areas-overlay {
	/*background-color: #000;*/
	overflow: hidden;
	position: absolute;
}
.blurred {
	filter: url("/filters.svg#blur3px");
	-webkit-filter: blur(3px);
	-moz-filter: blur(3px);
	-o-filter: blur(3px);
	filter: blur(3px);
}

.select-areas-outline {
	background: #fff url('../img/selectarea/outline.gif');
	overflow: hidden;
}

.select-areas-resize-handler {
	background-color: #fff;
	border: 2px #000 solid;
	height: 10px;
	width: 10px;
	overflow: hidden;
}

.select-areas-delete-area {
	background: url('../img/selectarea/bt-delete.png');
	cursor: pointer;
	height: 16px;
	width: 16px;
}
.delete-area {
	position: absolute;
	cursor: pointer;
	padding: 5px;
}
.select-areas-background-area{
	border: 1px solid #ff490a;
}